<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddcarActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/addcarll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvhersteller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hersteller" />

            <Spinner
                android:id="@+id/spinnerherstellerac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tvnewhersteller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/newhersteller"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/newherstellerac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvmodellnameac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/modellname" />

            <EditText
                android:id="@+id/modellnameac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10" />

            <TextView
                android:id="@+id/tvleistungac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/leistung" />

            <EditText
                android:id="@+id/leistungac"
                android:layout_width="350dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvklasseac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/klasse" />

            <Spinner
                android:id="@+id/klasseac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/submitac"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Auto hinzufÃ¼gen" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>